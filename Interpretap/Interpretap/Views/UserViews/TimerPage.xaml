<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Interpretap.Views.UserViews.TimerPage"
             NavigationPage.HasNavigationBar="false">
    
    <ContentPage.Padding>
        <OnPlatform
            x:TypeArguments="Thickness"
            iOS="0,20,0,0" />
    </ContentPage.Padding>   
    
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" BackgroundColor="AliceBlue">
            <Label Text="{Binding ElapsedTime}"
                   FontSize="52" 
                HorizontalOptions="CenterAndExpand" />
            <BoxView Color="Black" WidthRequest="100" HeightRequest="2" />

            <Label Text="Agency: To be wired" FontSize="24" />
            <Label Text="Gender: To be wired" FontSize="24" />
            <StackLayout Orientation="Horizontal">
                <Label Text="ID:" FontSize="24" />
                <Label Text="{Binding CallId}" FontSize="24" />
            </StackLayout> 


            <Label x:Name="Lbl_Call_Status" Text="{Binding CallStatus}" HorizontalTextAlignment="Center" VerticalOptions="EndAndExpand" HorizontalOptions="CenterAndExpand" Margin="0,0,0,50"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>