<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Interpretap.CustomElements.ActiveCallView">
    <ContentView.Content>

        <AbsoluteLayout>

            <StackLayout 
                Orientation="Horizontal" 
                AbsoluteLayout.LayoutFlags="All"
                AbsoluteLayout.LayoutBounds="0,0,1,1">
                
                <StackLayout HorizontalOptions="FillAndExpand">

                    <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                        <Label Text="Hospital 1" FontAttributes="Bold"/>
                        <Label Text="- (Active Request)" TextColor="Red"/>
                    </StackLayout>


                    <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                        <Label Text="0000-00-00 00:00:00"/>
                        <Label Text="  Call ID:" TextColor="Red"/>
                        <Label Text="{Binding CallId}" TextColor="Red"/>
                    </StackLayout>
                </StackLayout>

                <StackLayout HorizontalOptions="End">
                    <Button 
                    Text="Delete" 
                    BackgroundColor="Red" 
                    TextColor="White" 
                    VerticalOptions="Center" 
                    Command="{Binding CancelCallCommand}"/>
                </StackLayout>
            </StackLayout>


            <StackLayout 
                BackgroundColor="White"
                IsVisible="{Binding IsActivityIndicatorVisible}"
                AbsoluteLayout.LayoutFlags="All"
                AbsoluteLayout.LayoutBounds="0,0,1,1">
                
                <ActivityIndicator 
                    IsRunning="True" 
                    VerticalOptions="Center"
                    HorizontalOptions="Center"/>
            </StackLayout>
        </AbsoluteLayout>
    </ContentView.Content>
</ContentView>